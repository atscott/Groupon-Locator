<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/layout_bg">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dealImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:contentDescription="Deal Image"
            android:layout_marginLeft="5dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/titleText"
            android:textColor="#00a71c"
            android:layout_toRightOf="@+id/dealImage"
            android:layout_alignTop="@+id/dealImage"
            android:layout_marginRight="15dp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Snippet"
            android:id="@+id/snippetText"
            android:layout_toRightOf="@+id/dealImage"
            android:layout_below="@+id/titleText"
            android:textColor="#000000"
            android:layout_marginRight="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sold"
            android:id="@+id/soldText"
            android:layout_toRightOf="@+id/dealImage"
            android:layout_below="@+id/snippetText"
            android:textColor="#000000"
            android:layout_marginRight="5dp"/>
</RelativeLayout>